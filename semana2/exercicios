#CALCULO % SALARIO

hrs= float(input("Horas trabalhadas no mês:"))
ganhoHora= 35.00 

salario= hrs * ganhoHora

if salario <= 1000.00:
    salario= salario * 1.30
print("Salário do mês: ", salario)


#NUMERO CRESCENTE
n1= float(input("Primeiro número:"))
n2= float(input("Segundo número:"))

if n1 > n2:
    print(n1,n2)
else:
    print(n2,n1)
    
#ANO VOTAÇÃO
nasc= int(input("Ano de nascimento:"))
anoAtual= 2023

if anoAtual-nasc >= 16:
    print("Apto para votar")
else:
    print("Inapto")

#CALCULOGASOLINA
precoLitro= float(input("Valor por litro:"))
valorTotal= float(input("Valor total:"))

litros= valorTotal / precoLitro

print("Total de litros abastecidos:",litros)

#MAIORIDADE
idade= int(input("Idade:"))

if idade >= 18:
    print("Maior de idade")
else:
    print("Menor de idade")

#NUMERO POSITIVO E NEGATIVO
n= float(input("Digite um número:"))

if n > 0:
    n2= n * 2
    print(n2)
    
else: 
    print("Inválido")

#CALCULO PESO IDEAL

h = float(input("Altura do indivíduo:"))

sexo= input("Sexo:").upper()

if sexo == "HOMEM":
    pesoHomem= (72.7*h) - 58
    print("Peso ideal do homem:", pesoHomem)

if sexo == "MULHER":
    pesoMulher=(62.1 * h) - 44.7
    print("Peso ideal da mulher:", pesoMulher)

    
